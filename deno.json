{
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"]
  },
  "tasks": {
    "build": "deno compile --unstable --allow-ffi --output ./bin/hello.exe ./src/main.ts",
    "codegen": "cd ./tools && deno run --unstable --allow-run --allow-write ./codegen.ts",
    "run-hello-world": "cd ./examples && deno run --unstable --allow-ffi ./hello-world.ts"
  }
}

{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": ["build"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$deno"]
    },
    {
      "label": "CodeGen",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": ["codegen"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$deno"]
    },
    {
      "label": "Run Hello World",
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "type": "deno",
      "command": "task",
      "args": ["run-hello-world"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$deno"]
    }
  ]
}
